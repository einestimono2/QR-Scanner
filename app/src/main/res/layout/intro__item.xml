<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
>
    <ImageView
        android:id="@+id/introItem_img"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/introItem_title"
        android:src="@drawable/img_intro1"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="48dp"
        android:contentDescription="@string/default_contentDescription"
    />

    <TextView
        android:id="@+id/introItem_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/introItem_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textAlignment="center"
        android:text="@string/intro_activity_title1"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/inter_700_bold"
        android:textSize="20sp"
    />

    <TextView
        android:id="@+id/introItem_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textAlignment="center"
        android:text="@string/intro_activity_content1"
        android:fontFamily="@font/inter_400_regular"
        android:textSize="14sp"
        android:layout_marginBottom="16dp"
    />

</androidx.constraintlayout.widget.ConstraintLayout>