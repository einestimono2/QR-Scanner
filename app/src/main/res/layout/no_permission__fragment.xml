<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.home.NoPermissionFragment"
>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="32dp"
    >
        <TextView
            android:id="@+id/noPermissionDialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="@string/no_permission_dialog_title"
            android:textColor="@color/neutral"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="@font/inter_700_bold"
            android:textAlignment="center"
        />

        <TextView
            android:id="@+id/noPermissionDialog_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/noPermissionDialog_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="@string/no_permission_dialog_message"
            android:textColor="@color/neutral"
            android:textSize="14sp"
            android:fontFamily="@font/inter_500_medium"
            android:textAlignment="center"
            android:layout_marginTop="24dp"
        />

        <Button
            android:id="@+id/noPermissionDialog_btnGoSetting"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/noPermissionDialog_message"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="24dp"
            android:backgroundTint="@color/primary"
            android:text="@string/go_setting"
            android:fontFamily="@font/inter_700_bold"
            android:textSize="16sp"
        />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>