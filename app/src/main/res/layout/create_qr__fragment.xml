<?xml version="1.0" encoding="utf-8"?>
<layout
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
>
	<data>
		<variable
				name="fragment"
				type="com.example.tranning_qr_scanner.presentation.create_qr.CreateQRFragment"
		/>
	</data>
	
	<androidx.constraintlayout.widget.ConstraintLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			tools:context=".presentation.create_qr.CreateQRFragment"
	>
		<com.google.android.material.appbar.AppBarLayout
				android:id="@+id/createQRFrag_appBar"
				android:layout_width="match_parent"
				android:layout_height="@dimen/app_bar_height"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toTopOf="parent"
		>
			<!-- app:navigationIcon="@drawable/ic_back" -->
			<com.google.android.material.appbar.MaterialToolbar
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					app:menu="@menu/scan_result_menu"
					app:title="@string/create_qr_title"
					app:titleCentered="false"
					app:titleTextAppearance="@style/ToolbarStyleBlack"
			/>
		</com.google.android.material.appbar.AppBarLayout>
		
		<ScrollView
				android:layout_width="0dp"
				android:layout_height="0dp"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintTop_toBottomOf="@id/createQRFrag_appBar"
				app:layout_constraintBottom_toBottomOf="parent"
				android:paddingHorizontal="16dp"
				android:paddingVertical="8dp"
				android:scrollbars="none"
		>
			<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="vertical"
			>
				<TextView
						android:id="@+id/createQRFrag_businessCard"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:text="@string/my_business_card"
						android:gravity="center|start"
						app:drawableLeftCompat="@drawable/ic_bussiness_card"
						android:drawablePadding="16dp"
						android:padding="16dp"
						android:fontFamily="@font/inter_600_semi_bold"
						android:textSize="14sp"
						android:textColor="@color/neutral"
						android:background="@drawable/white_rounded_16"
						android:onClick="@{fragment.handleCreateQr}"
				/>
				
				<TextView
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:text="@string/personal"
						android:layout_marginTop="16dp"
						android:layout_marginBottom="8dp"
						android:fontFamily="@font/inter_700_bold"
						android:textSize="16sp"
						android:textColor="@color/neutral"
						app:drawableStartCompat="@drawable/indicator_border_left"
						android:drawablePadding="8dp"
				/>
				
				<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:background="@drawable/white_rounded_16"
						android:padding="16dp"
						android:orientation="vertical"
				>
					<TextView
							android:id="@+id/createQRFrag_personal_emailAddress"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:text="@string/email_address"
							android:gravity="center|start"
							app:drawableLeftCompat="@drawable/ic_scan_result_email"
							android:drawablePadding="16dp"
							android:fontFamily="@font/inter_600_semi_bold"
							android:textSize="14sp"
							android:textColor="@color/neutral"
							android:onClick="@{fragment.handleCreateQr}"
					/>
					
					<View
							android:layout_height="1dp"
							android:layout_width="match_parent"
							android:background="@color/card"
							android:layout_marginStart="40dp"
							android:layout_marginVertical="12dp"
					/>
					
					<TextView
							android:id="@+id/createQRFrag_personal_website"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:text="@string/website"
							android:gravity="center|start"
							app:drawableLeftCompat="@drawable/ic_scan_result_website"
							android:drawablePadding="16dp"
							android:fontFamily="@font/inter_600_semi_bold"
							android:textSize="14sp"
							android:textColor="@color/neutral"
							android:onClick="@{fragment.handleCreateQr}"
					/>
					
					<View
							android:layout_height="1dp"
							android:layout_width="match_parent"
							android:background="@color/card"
							android:layout_marginStart="40dp"
							android:layout_marginVertical="12dp"
					/>
					
					<TextView
							android:id="@+id/createQRFrag_personal_contactInfo"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:text="@string/contact_info"
							android:gravity="center|start"
							app:drawableLeftCompat="@drawable/ic_scan_result_contact"
							android:drawablePadding="16dp"
							android:fontFamily="@font/inter_600_semi_bold"
							android:textSize="14sp"
							android:textColor="@color/neutral"
							android:onClick="@{fragment.handleCreateQr}"
					/>
					
					<View
							android:layout_height="1dp"
							android:layout_width="match_parent"
							android:background="@color/card"
							android:layout_marginStart="40dp"
							android:layout_marginVertical="12dp"
					/>
					
					<TextView
							android:id="@+id/createQRFrag_personal_telephone"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:text="@string/telephone"
							android:gravity="center|start"
							app:drawableLeftCompat="@drawable/ic_scan_result_telephone"
							android:drawablePadding="16dp"
							android:fontFamily="@font/inter_600_semi_bold"
							android:textSize="14sp"
							android:textColor="@color/neutral"
							android:onClick="@{fragment.handleCreateQr}"
					/>
					
					<View
							android:layout_height="1dp"
							android:layout_width="match_parent"
							android:background="@color/card"
							android:layout_marginStart="40dp"
							android:layout_marginVertical="12dp"
					/>
					
					<TextView
							android:id="@+id/createQRFrag_personal_message"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:text="@string/message"
							android:gravity="center|start"
							app:drawableLeftCompat="@drawable/ic_scan_result_message"
							android:drawablePadding="16dp"
							android:fontFamily="@font/inter_600_semi_bold"
							android:textSize="14sp"
							android:textColor="@color/neutral"
							android:onClick="@{fragment.handleCreateQr}"
					/>
				
				</LinearLayout>
				
				<TextView
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:text="@string/social"
						android:layout_marginTop="16dp"
						android:layout_marginBottom="8dp"
						android:fontFamily="@font/inter_700_bold"
						android:textSize="16sp"
						android:textColor="@color/neutral"
						app:drawableStartCompat="@drawable/indicator_border_left"
						android:drawablePadding="8dp"
				/>
				
				<GridLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:padding="16dp"
						android:columnCount="4"
						android:orientation="horizontal"
						android:background="@drawable/white_rounded_16"
				>
					<TextView
							android:id="@+id/createQRFrag_social_whatsapp"
							android:text="@string/whatsapp"
							android:drawablePadding="8dp"
							app:drawableTopCompat="@drawable/ic_whatsapp"
							android:fontFamily="@font/inter_500_medium"
							android:textSize="14sp"
							android:textColor="@color/neutral"
							android:layout_column="0"
							android:layout_row="0"
							android:layout_rowWeight="1"
							android:layout_columnWeight="1"
							android:gravity="center"
							android:layout_marginEnd="8dp"
							android:onClick="@{fragment.handleCreateQr}"
					/>
					<TextView
							android:id="@+id/createQRFrag_social_facebook"
							android:text="@string/facebook"
							android:drawablePadding="8dp"
							app:drawableTopCompat="@drawable/ic_facebook"
							android:fontFamily="@font/inter_500_medium"
							android:textSize="14sp"
							android:textColor="@color/neutral"
							android:layout_column="1"
							android:layout_row="0"
							android:layout_rowWeight="1"
							android:layout_columnWeight="1"
							android:gravity="center"
							android:layout_marginEnd="8dp"
							android:onClick="@{fragment.handleCreateQr}"
					/>
					<TextView
							android:id="@+id/createQRFrag_social_twitter"
							android:text="@string/twitter"
							android:drawablePadding="8dp"
							app:drawableTopCompat="@drawable/ic_twitter"
							android:fontFamily="@font/inter_500_medium"
							android:textSize="14sp"
							android:textColor="@color/neutral"
							android:layout_column="2"
							android:layout_row="0"
							android:layout_rowWeight="1"
							android:layout_columnWeight="1"
							android:gravity="center"
							android:layout_marginEnd="8dp"
							android:onClick="@{fragment.handleCreateQr}"
					/>
					<TextView
							android:id="@+id/createQRFrag_social_instagram"
							android:text="@string/instagram"
							android:drawablePadding="8dp"
							app:drawableTopCompat="@drawable/ic_instagram"
							android:fontFamily="@font/inter_500_medium"
							android:textSize="14sp"
							android:textColor="@color/neutral"
							android:layout_column="3"
							android:layout_row="0"
							android:layout_rowWeight="1"
							android:layout_columnWeight="1"
							android:gravity="center"
							android:onClick="@{fragment.handleCreateQr}"
					/>
					
					<!-- Row 2 -->
					<TextView
							android:id="@+id/createQRFrag_social_tiktok"
							android:text="@string/tiktok"
							android:drawablePadding="8dp"
							app:drawableTopCompat="@drawable/ic_tiktok"
							android:fontFamily="@font/inter_500_medium"
							android:textSize="14sp"
							android:textColor="@color/neutral"
							android:layout_column="0"
							android:layout_row="1"
							android:layout_columnWeight="1"
							android:gravity="center"
							android:layout_marginEnd="8dp"
							android:layout_marginTop="16dp"
							android:onClick="@{fragment.handleCreateQr}"
					/>
					<TextView
							android:id="@+id/createQRFrag_social_telegram"
							android:text="@string/telegram"
							android:drawablePadding="8dp"
							app:drawableTopCompat="@drawable/ic_telegram"
							android:fontFamily="@font/inter_500_medium"
							android:textSize="14sp"
							android:textColor="@color/neutral"
							android:layout_column="1"
							android:layout_row="1"
							android:layout_columnWeight="1"
							android:gravity="center"
							android:layout_marginEnd="8dp"
							android:layout_marginTop="16dp"
							android:onClick="@{fragment.handleCreateQr}"
					/>
					
					<TextView
							android:id="@+id/createQRFrag_social_youtube"
							android:text="@string/youtube"
							android:drawablePadding="8dp"
							app:drawableTopCompat="@drawable/ic_youtube"
							android:fontFamily="@font/inter_500_medium"
							android:textSize="14sp"
							android:textColor="@color/neutral"
							android:layout_column="2"
							android:layout_row="1"
							android:layout_columnWeight="1"
							android:gravity="center"
							android:layout_marginEnd="8dp"
							android:layout_marginTop="16dp"
							android:onClick="@{fragment.handleCreateQr}"
					/>
					
					<TextView
							android:id="@+id/createQRFrag_social_spotify"
							android:text="@string/spotify"
							android:drawablePadding="8dp"
							app:drawableTopCompat="@drawable/ic_spotify"
							android:fontFamily="@font/inter_500_medium"
							android:textSize="14sp"
							android:textColor="@color/neutral"
							android:layout_column="3"
							android:layout_row="1"
							android:layout_columnWeight="1"
							android:gravity="center"
							android:layout_marginTop="16dp"
							android:onClick="@{fragment.handleCreateQr}"
					/>
				</GridLayout>
				
				<TextView
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:text="@string/utilities"
						android:layout_marginTop="16dp"
						android:layout_marginBottom="8dp"
						android:fontFamily="@font/inter_700_bold"
						android:textSize="16sp"
						android:textColor="@color/neutral"
						app:drawableStartCompat="@drawable/indicator_border_left"
						android:drawablePadding="8dp"
				/>
				
				<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:background="@drawable/white_rounded_16"
						android:padding="16dp"
						android:orientation="vertical"
				>
					<TextView
							android:id="@+id/createQRFrag_utilities_wifi"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:text="@string/wifi"
							android:gravity="center|start"
							app:drawableLeftCompat="@drawable/ic_scan_result_wifi"
							android:drawablePadding="16dp"
							android:fontFamily="@font/inter_600_semi_bold"
							android:textSize="14sp"
							android:textColor="@color/neutral"
							android:onClick="@{fragment.handleCreateQr}"
					/>
					
					<View
							android:layout_height="1dp"
							android:layout_width="match_parent"
							android:background="@color/card"
							android:layout_marginStart="40dp"
							android:layout_marginVertical="12dp"
					/>
					
					<TextView
							android:id="@+id/createQRFrag_utilities_text"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:text="@string/text"
							android:gravity="center|start"
							app:drawableLeftCompat="@drawable/ic_scan_result_text"
							android:drawablePadding="16dp"
							android:fontFamily="@font/inter_600_semi_bold"
							android:textSize="14sp"
							android:textColor="@color/neutral"
							android:onClick="@{fragment.handleCreateQr}"
					/>
					
					<View
							android:layout_height="1dp"
							android:layout_width="match_parent"
							android:background="@color/card"
							android:layout_marginStart="40dp"
							android:layout_marginVertical="12dp"
					/>
					
					<TextView
							android:id="@+id/createQRFrag_utilities_calendar"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:text="@string/calendar"
							android:gravity="center|start"
							app:drawableLeftCompat="@drawable/ic_scan_result_calendar"
							android:drawablePadding="16dp"
							android:fontFamily="@font/inter_600_semi_bold"
							android:textSize="14sp"
							android:textColor="@color/neutral"
							android:onClick="@{fragment.handleCreateQr}"
					/>
				</LinearLayout>
			
			</LinearLayout>
		</ScrollView>
	
	</androidx.constraintlayout.widget.ConstraintLayout>

</layout>