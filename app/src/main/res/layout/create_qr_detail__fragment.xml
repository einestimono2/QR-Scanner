<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		tools:context=".presentation.create_qr_detail.CreateQrDetailFragment"
>
	<com.google.android.material.appbar.AppBarLayout
			android:id="@+id/createQRFrag_appBar"
			android:layout_width="match_parent"
			android:layout_height="@dimen/app_bar_height"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent"
	>
		<com.google.android.material.appbar.MaterialToolbar
				app:navigationIcon="@drawable/ic_back"
				android:id="@+id/createQRFrag_appBar_title"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				app:menu="@menu/scan_result_menu"
				app:title="@string/create_qr_title"
				app:titleCentered="false"
				app:titleTextAppearance="@style/ToolbarStyleBlack"
				android:background="@color/white"
		/>
	</com.google.android.material.appbar.AppBarLayout>
	
	<com.google.android.material.tabs.TabLayout
			android:id="@+id/createQRFrag_tabs"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			app:layout_constraintTop_toBottomOf="@id/createQRFrag_appBar"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			android:background="@color/white"
			
			app:tabMode="scrollable"
			app:tabGravity="fill"
			app:tabPaddingBottom="10dp"
			app:tabPaddingTop="10dp"
			app:tabPaddingStart="26dp"
			app:tabPaddingEnd="26dp"
			
			app:tabBackground="@drawable/selector_tab_bg_create_qr"
			app:tabIndicatorFullWidth="true"
			app:tabIndicatorGravity="stretch"
			app:tabIndicator="@drawable/indicator_tab_layout_create_qr"
			app:tabIndicatorColor="@color/primary"
			app:tabContentStart="46dp"
			
			app:tabTextColor="@drawable/selector_tab_create_qr"
			app:tabRippleColor="@android:color/transparent"
	/>
	
	<ScrollView
			android:layout_width="0dp"
			android:layout_height="0dp"
			app:layout_constraintTop_toBottomOf="@id/createQRFrag_tabs"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintBottom_toTopOf="@id/createQrDetailFragment_btn"
	>
		<ViewFlipper
				android:id="@+id/createQrDetailFragment_content"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
		/>
	</ScrollView>
	
	<com.google.android.material.button.MaterialButton
			android:id="@+id/createQrDetailFragment_btn"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintBottom_toBottomOf="parent"
			android:text="@string/create"
			android:layout_margin="16dp"
			android:insetLeft="0dp"
			android:insetTop="0dp"
			android:insetRight="0dp"
			android:insetBottom="0dp"
			android:fontFamily="@font/inter_700_bold"
			android:textSize="16sp"
			android:enabled="false"
			android:textColor="@color/white"
			android:background="@drawable/selector_button_bg"
	/>

</androidx.constraintlayout.widget.ConstraintLayout>