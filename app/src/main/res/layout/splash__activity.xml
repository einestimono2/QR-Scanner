<?xml version="1.0" encoding="utf-8"?>
<layout>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".features.onboarding.view.SplashActivity"
    >

        <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/splashAct_gl_iconTop"
            app:layout_constraintGuide_percent="0.2358974358974359"
            android:orientation="horizontal"
        />

        <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/splashAct_gl_txtBottom"
            app:layout_constraintGuide_percent="0.9435897435897436"
            android:orientation="horizontal"
        />

        <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/splashAct_gl_iconLeft"
            app:layout_constraintGuide_percent="0.3333333333333333"
            android:orientation="vertical"
        />

        <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/splashAct_gl_iconRight"
            app:layout_constraintGuide_percent="0.6666666666666667"
            android:orientation="vertical"
        />

        <ImageView
            android:id="@+id/splashAct_iv_icon"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:srcCompat="@drawable/app_icon"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="@+id/splashAct_gl_iconRight"
            app:layout_constraintTop_toBottomOf="@+id/splashAct_gl_iconTop"
            app:layout_constraintStart_toStartOf="@+id/splashAct_gl_iconLeft"
            app:layout_constraintDimensionRatio="H,1:1"
            android:contentDescription="@string/app_icon_contentDescription"
        />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/splashAct_iv_icon"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/inter_700_bold"
            android:textSize="24sp"
            android:textColor="@color/neutral"
            android:textStyle="bold"
            android:lineHeight="28dp"
            android:text="@string/app_name"
            tools:ignore="UnusedAttribute"
        />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/splashAct_gl_txtBottom"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:fontFamily="@font/inter_400_regular"
            android:textSize="14sp"
            android:textColor="@color/neutral"
            android:textStyle="normal"
            android:lineHeight="20dp"
            android:text="@string/splash_activity_note"
            tools:ignore="UnusedAttribute"
        />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>