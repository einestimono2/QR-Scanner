<?xml version="1.0" encoding="utf-8"?>

<layout>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".features.onboarding.view.LanguageActivity"
    >
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/languageAct_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
        >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/language_activity_title"
                android:fontFamily="@font/inter_700_bold"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/neutral"
                android:lineHeight="28dp"
                tools:ignore="UnusedAttribute"
            />

            <ImageView
                android:id="@+id/languageAct_toolbar_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/default_contentDescription"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:src="@drawable/ic_check"
                android:layout_gravity="end"
                android:layout_marginEnd="16dp"
                android:background="@drawable/primary_rounded_16"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackgroundBorderless"
            />
        </androidx.appcompat.widget.Toolbar>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/languageAct_rv"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/languageAct_ads"
            app:layout_constraintTop_toBottomOf="@id/languageAct_toolbar"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="16dp"
        />

        <com.example.tranning_qr_scanner.core.view.AdsCard
            android:id="@+id/languageAct_ads"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:title="Title max 25 characters"
            app:description="Secondary body  asd Text description max 90 characters..."
            app:image="@drawable/img_ads"
            app:type="vertical"
        />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>